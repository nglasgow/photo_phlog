<h1>Gallery</h1>

<div id="phlogs">
  <% for phlog in @gallery.phlogs %>
    <div class="phlog">
      <%= image_tag phlog.picture_url(:thumb).to_s %>
      <div class="name"><%= phlog.name %></div>
      <div class="actions">
        <%= link_to "edit", edit_phlog_path(phlog) %> |
        <%= link_to "remove", phlog, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<p>
  <%= link_to "Add a Phlog", new_phlog_path(:gallery_id => @gallery) %> |
  <%= link_to "Remove Gallery", @gallery, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View Galleries", galleries_path %>
</p>
